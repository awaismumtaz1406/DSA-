#include <iostream>
using namespace std;

int main() {
    int i,j,c,n=5;
    int s=0;
    
    for(i=1; i<=n*2;i++){
         c=i>n ?2*n-i:i;
         s=n-c;
         
         for(int k=1; k<=s; k++){
             cout<<" ";
         }
    for(j=1;j<=c;j++){
            cout<<"* ";
        }
                    cout<<endl;}
    return 0;
}
