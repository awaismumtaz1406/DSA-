#include <iostream>
using namespace std;

int main() {
    int i,j,c,n=5;
    
    for(i=1; i<=n*2;i++){
         c=i>n ?2*n-i:i;
    for(j=1;j<=c;j++){
            cout<<j;
        }
                    cout<<endl;}
    return 0;
}


