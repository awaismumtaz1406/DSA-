#include <iostream>
using namespace std;

int main() {
    int i,j,k;
   int n=5;
 
    for(i=1;i<=n;i++){
    for(k=1; k<=i;k++){
                cout<<" ";
            }
          
        
        for(j=i; j<=n; j++){
         cout<<"* ";
        }
        
         for(j=0; j>=i; j--){
         cout<<"* ";
        }
        
        cout<<endl;
    }
    return 0;
}



